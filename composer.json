{
    "name": "stp/rtm",
    "description": "Real time monitor dashboard using Jenkins API and New Relic API",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "secure-http": false

    },
    "repositories": [
        { "type": "vcs", "url": "git.int.vgnett.no:/git/stp/cap4all.git" }
    ],
    "require": {
        "php": ">=5.5.0",
        "ext-mongo": "*",
        "zendframework/zendframework": "~2.4.0",
        "guzzlehttp/guzzle": "~6.0",
        "erusev/parsedown": "*",
        "doctrine/doctrine-mongo-odm-module": "~0.9.0",
        "supervisorphp/supervisor": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.6",
        "phpunit/phpcov": "~2.0",
        "phploc/phploc": "~2.0",
        "phpmd/phpmd": "~2.0",
        "pdepend/pdepend":"~2.0",
        "sebastian/phpcpd": "~2.0",
        "squizlabs/php_codesniffer": "~2.2",
        "filp/whoops": "~1.0",
        "fabpot/php-cs-fixer": "*@dev",
        "satooshi/php-coveralls": "~1.0",
        "stp/cap4all": "dev-master"
    },
    "scripts": {
        "post-install-cmd": [
            "rake herokubuild"
        ],
        "post-update-cmd": [
            "if [ -f vendor/stp/cap4all/Capfile ];then rm -f Capfile; ln -f -s vendor/stp/cap4all/Capfile Capfile ; fi;"
        ]
    }
}
