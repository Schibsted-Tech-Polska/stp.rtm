{
    "name": "stp/rtm",
    "description": "Real time monitor dashboard using Jenkins API and New Relic API",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "github-oauth": {
            "github.com": "0f1045ecff9d1a2d6260f501ac1ffcfa5370550c"
        }
    },
    "repositories": [
        { "type": "vcs", "url": "git.int.vgnett.no:/git/stp/cap4all.git" }
    ],
    "require": {
        "php": ">=5.4",
        "ext-mongo": "*",
        "zendframework/zendframework": "~2.3",
        "doctrine/doctrine-mongo-odm-module": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpunit/phpcov": "~2.0",
        "phploc/phploc": "*",
        "phpmd/phpmd": "*",
        "pdepend/pdepend":"*",
        "sebastian/phpcpd": "*",
        "squizlabs/php_codesniffer": "1.*",
        "filp/whoops": "*",
        "fabpot/php-cs-fixer": "*@dev",
        "satooshi/php-coveralls": "dev-master",
        "stp/cap4all": "dev-master"
    },
    "scripts": {
        "post-install-cmd": [
            "rake herokubuild"
        ],
        "post-update-cmd": [
            "if [ -f vendor/stp/cap4all/Capfile ];then rm -f Capfile; ln -f -s vendor/stp/cap4all/Capfile Capfile ; fi;"
        ]
    }
}
